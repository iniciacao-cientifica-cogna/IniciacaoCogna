<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_activity_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.Area">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/baloo"
            android:includeFontPadding="false"
            android:lineSpacingExtra="20sp"
            android:text="Escolha a Area!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/farmacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="farmacia"
            android:text="Farmácia e Biotecnologia e Inovação em Saúde"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/baloo"
            />
        <Button
            android:id="@+id/agronomia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="agronomia"
            android:text="agronomia"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/baloo"
            />

        <Button
            android:id="@+id/odontologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odontologia"
            android:onClick="odontologia"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/baloo"
            />

        <Button
            android:id="@+id/medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/baloo"
            android:onClick="medico"
            android:text="Medicina veterinária" />

        <Button
            android:id="@+id/Direito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="direito"
            android:text="Direito"
            android:layout_marginLeft="160dp"
            android:fontFamily="@font/baloo"
            />

        <Button
            android:id="@+id/meio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="meio"
            android:text="Meio Ambiente"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/baloo"
            />

        <Button
            android:id="@+id/ciencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ciencia"
            android:text="Ciências da Reabilidade e do Exercício Físico na Promoção da Saúde"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/baloo"
            />

        <Button
            android:id="@+id/tic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="tic"
            android:text="Tecnologia da Informação e Comunicação"
            android:fontFamily="@font/baloo"
            />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
