<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_telas_areas"
    tools:context="Activity.Odontologia">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/cronograma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Cronograma de Atividades"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/treinamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Treinamento e calibração dos pesquisadores"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_odontologia"
            android:id="@+id/pergunta_treinamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/treinamento"
            android:textColor="#000000">
        </Spinner>


        <TextView
            android:id="@+id/recrutamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Recrutamento dos pacientes"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_odontologia"
            android:id="@+id/pergunta_recrutamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coleta"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/coleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Coleta de dados"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_odontologia"
            android:id="@+id/pergunta_coleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coleta"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/analise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Análise estatística"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_odontologia"
            android:id="@+id/pergunta_analise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/analise"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/divulgacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Divulgação em meio cientifico de dados parciais"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_odontologia"
            android:id="@+id/pergunta_divulgacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divulgacao"
            android:textColor="#000000">
        </Spinner>

                <Button
            android:id="@+id/submeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_botao_nome_tela_principal"
            android:onClick="submeterDadosMedicina"
            android:text="Submeter dados"
            android:textColor="#000000"
            android:textColorHint="#F6F0F2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>