<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_telas_areas"
    tools:context="Activity.Medicina">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/cronograma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Cronograma de Atividades"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/treinamento_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Treinamento dos envolvidos"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_medicina"
            android:id="@+id/pergunta_treinamento_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/treinamento_medicina"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/coleta_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Coleta de dados"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_medicina"
            android:id="@+id/pergunta_coleta_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coleta_medicina"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/analise_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="50"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Análise de dados"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_medicina"
            android:id="@+id/pergunta_analise_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/analise_medicina"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/apresentacao_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="25"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Apresentação de resultados prévios"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_medicina"
            android:id="@+id/pergunta_apresentacao_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apresentacao_medicina"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/discussao_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Discussão com a equipe multicentrica"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_farmacia"
            android:id="@+id/pergunta_discussao_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discussao_medicina"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/redacao_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Redação científica"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_medicina"
            android:id="@+id/pergunta_redacao_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/redacao_medicina"
            android:textColor="#000000">
        </Spinner>

        <TextView
            android:id="@+id/publicacao_medicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Publicação"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            />

        <Spinner
            android:entries="@array/spinner_medicina"
            android:id="@+id/pergunta_publicacao_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/publicacao_medicina"
            android:textColor="#000000">
        </Spinner>

        <Button
            android:id="@+id/submeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_botao_nome_tela_principal"
            android:onClick="submeterDadosCiencia"
            android:text="Submeter dados"
            android:textColor="#000000"
            android:textColorHint="#F6F0F2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="120dp"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>