<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_activity"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context="Activity.MainActivity">

    <!--apresentação do nome iniciação cientifica -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/baloo"
        android:includeFontPadding="false"
        android:lineSpacingExtra="20sp"
        android:text="Iniciação Cientifica Cogna"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!--opção para inserir nome de usuário-->
    <EditText
        android:id="@+id/NomeDeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_botao_nome_tela_principal"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="6dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        android:padding="8dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#F6F0F2" />

    <!--opção para inserir senha de usuário-->
    <EditText
        android:id="@+id/Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_botao_senha_tela_principal"
        android:drawableLeft="@drawable/baseline_android_24"
        android:drawablePadding="6dp"
        android:ems="10"
        android:hint="Senha"
        android:padding="8dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#F6F0F2" />

    <!--botão para verificar usuário e senha no banco de dados-->
    <Button
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_botao_login_tela_principal"
        android:fontFamily="@font/cantora_one"
        android:onClick="validarAutenticacao"
        android:padding="8dp"
        android:text="Login"
        android:ems="3"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!--botão para de redirecionamento para a tela de cadastro-->
    <Button
        android:id="@+id/TelaDeCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_botao_cadastrar_tela_principal"
        android:fontFamily="@font/cantora_one"
        android:text="Cadastre-se"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Cadastro de aluno" />

</androidx.appcompat.widget.LinearLayoutCompat>